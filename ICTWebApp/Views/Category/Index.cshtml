@{
    ViewData["Title"] = "ประเภทสินค้า";
}
@model ICollection<Category>
<h1>แสดงรายการประเภทสินค้า @ViewBag.CategoryCount รายการ</h1>
<a class="btn btn-primary btn-lg" asp-action="Create">เพิ่มประเภทสินค้า</a>
<table class="table">
    <thead class="thead-dark">
    <tr>
        <th scope="col">#</th>
        <th scope="col">ชื่อประเภทสินค้า</th>
        <th scope="col">เครื่องมือ</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var cat in Model)
    {
        <tr>
            <th scope="row">@cat.CategoryID</th>
            <td>@cat.CategoryName</td>
            <td>
                <a asp-action="Edit" asp-route-id="@cat.CategoryID">แก้ไข</a>
                <a asp-action="Delete" asp-route-id="@cat.CategoryID">ลบ</a>
            </td>
        </tr>
    }
    </tbody>
</table>